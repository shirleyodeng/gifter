<div class="container">
  <div class="dashboard-container">
    <h1 class="user-name text-center"><%= current_user.first_name.capitalize %>'s Dashboard</h1>

    <div class="events-container">
      <h2>You are invited to</h2>
      <% if current_user.is_guest? %>
          <% @guests.each do |guest| %>
            <div class="event-card light-yellow">
              <div class="event-flex">
                <%= cl_image_tag guest.event.child_photo, height: 50, width: 50, class: "avatar-lg" %>
                <div class="event-title">
                  <h4><%= guest.event.child_name.capitalize %>'s <%= guest.event.name.capitalize %></h4>
                  <p>Date: <%= guest.event.date %></p>
                  <p>Invited by: <%= guest.event.creator.first_name %> <%= guest.event.creator.last_name %></p>
                </div>
                <div class="event-box">
                  <%= link_to (cl_image_tag "box", height: 50, width: 50, crop: :thumb, gravity: :face), event_gifts_path(guest.event), class: "user-dashboard-icon" %>
                  <p class="icon-hover-text yellow"><%= guest.event.child_name.capitalize %>'s gifts</p>
                </div>
                <div class="event-box">
                  <%= cl_image_tag "sad_face", height: 50, width: 50, crop: :thumb, gravity: :face, class: "user-dashboard-icon" %>
                      <p class="icon-hover-text gray">Contribute</p>
                </div>
                <div class="event-box">
                  <%= cl_image_tag "mail", height: 50, width: 50, crop: :thumb, gravity: :face, class: "user-dashboard-icon" %>
                  <p class="icon-hover-text red">View messages</p>
                </div>
              </div>
            </div>
          <% end %>
    <% else %>
      <p> You are currently not invited to any events. </p>
    <% end %>
  </div>


    <!-- <div class="red-banner">
    </div>
 -->
    <div class=events-container>
      <h2>You are hosting</h2>
      <%= link_to "Add event", new_event_path, class: "btn-grey user-index-button" %>
      <% if current_user.is_parent? %>
        <% @events.each do |event| %>
            <div class="event-card light-gray">

              <div class="event-flex">

                <%= cl_image_tag event.child_photo, height: 50, width: 50, class: "avatar-lg" %>
                  <div class="event-title">
                    <h4><%= event.child_name.capitalize %>'s <%= event.name.capitalize %></h4>
                    <p>Date: <%= event.date %></p>
                    <p>Invited by: <%= event.creator.first_name.capitalize %> <%= event.creator.last_name.capitalize %></p>
                  </div>

                  <div class="event-box">
                    <%= link_to (cl_image_tag "box", height: 50, width: 50, crop: :thumb, gravity: :face), event_gifts_path(event), class: "user-dashboard-icon" %>
                    <p class="icon-hover-text yellow"><%= event.child_name.capitalize %>'s gifts</p>
                  </div>

                  <div class="event-box">
                    <a href data-toggle="modal" data-target="#myModal-<%= event.id %>" id="edit">
                      <%= cl_image_tag "envelope", height: 50, width: 50, crop: :thumb, gravity: :face, class: "user-dashboard-icon" %>
                      <p class="icon-hover-text gray">Send invites</p>
                    </a>
                    <div class="modal fade" id="myModal-<%= event.id %>" role="dialog">
                      <div class="modal-dialog modal-md">
                        <div class="modal-content">
                          <div class="modal-header text-center">
                            <button type="button" class="close" data-dismiss="modal">x</button>
                            <h3 class="form-title spacing text-center">Invite your friends and family</h3>
                          </div>
                          <div class="modal-body text-center">
                            <%= render 'shared/eventpageform', event_id: event.id %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="event-box">
                    <%= cl_image_tag "mail", height: 50, width: 50, crop: :thumb, gravity: :face, class: "user-dashboard-icon" %>
                    <p class="icon-hover-text red">View messages</p>
                  </div>

                </div>
                <div class="delete-button red"><%= link_to "x", event_path(event), method: :delete %></div>
              </div>
        <% end %>
      <% else %>
        <h2> You are currently not hosting any events.</h2> <% link_to "Add an event!", new_event_path(@events) %>
      <% end %>
    </div>

  </div>
</div>
