<%= simple_form_for [@event, @gift] do |f| %>

  <div class="form-inputs">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :name, required: true %>
    <%= f.input :description, required: true %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create a gift" %>
  </div>
<% end %>
