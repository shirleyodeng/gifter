<h1>This is the Events New Page</h1>

<%= simple_form_for(@event) do |f| %>

  <div class="form-inputs">
    <%= f.input :child_photo %>
    <%= f.input :child_photo_cache, as: :hidden %>
    <%= f.input :child_name, required: true %>
    <%= f.input :name, required: true %>
    <%= f.input :date, required: true %>
    <%= f.input :account_name %>
    <%= f.input :sort_code %>
    <%= f.input :account_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create an event" %>
  </div>
<% end %>
