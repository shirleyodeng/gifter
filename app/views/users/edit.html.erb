<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="form-container">
        <h2 class="red padding-bottom">Edit your profile</h2>
        <p>Email: <%= @user.email %></p>
        <%= simple_form_for(@user) do |f| %>
          <div class="form-inputs">
            <%= cl_image_tag (current_user.photo.present? ? current_user.photo : 'logo-gifter'), class: "avatar-lg" %>
            <%= f.input :photo, label: false %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.input :first_name, required: true, label: false %>
            <%= f.input :last_name, required: true, label: false %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Update your profile", class: "form-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


