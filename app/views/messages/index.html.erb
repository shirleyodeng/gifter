<div class="min-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="form-container">
          <%= link_to "< Back to inbox", event_conversations_path(@event) %>
          <h3 class="yellow">Conversation with <%= @other_user.full_name %></h3>
          <% @messages.each do |message| %>
            <% if message.body %>
              <% user = User.find(message.user_id) %>
              <% if user == current_user %>
                <%  message_background = "body-gray" %>
              <% else %>
                <% message_background = "body-light-gray" %>
              <% end %>
              <div class="message-item <%= message_background %>">
                <div class="content">
                  <div class="header">
                      <strong><%= user.first_name %></strong>
                      <p class="message-time", style="display: inline;"><%= message.message_time %></p>
                  </div>
                  <div class="list">
                    <div class="item">
                      <i class="right triangle icon"></i>
                      <p class="message-text"><%= message.body %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
          <%= simple_form_for [@event, @conversation, @message] do |f| %>
            <%= f.input :body, label: false %>
            <%= f.hidden_field :event_id, value: @event.id %>
            <%= f.submit "Add Reply", class: "btn-yellow" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
